@click.group()
def main():
    pass

@main.command()
@click.argument('config', metavar='<trackc-conf.yml>')
@click.option('--regions', '-r', default=None,
              help="genome regions, \
              eg.:\'18:47950000-48280000 18:75280000-74850000\'")

@click.option('--outfile', '-o', default='trackc.pdf',
              help='output filename. default=trackc.pdf')

@click.option('--basefigsize', '-s', default='6,1',
              help='base figsize: width,height. default=\"6,1\"\
              The height option in the config.yml is relative to the base figsize height')

def cli(config, regions, outfile, basefigsize):
    track(config, regions, outfile, basefigsize)



@main.command() 
@click.option('--gtf2bed', '-a', default='ZJW', type=str, prompt='Your Name')
def your_name(name):
	click.echo(name)

